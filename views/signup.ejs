<!DOCTYPE html>
<html lang="fr">
  <head>
    <%- include("partials/head", {title: "Accueil"}) %>
  </head>
  <body>
    <%- include("partials/nav", {title: "GTI619 - Lab 05"}) %>
      <div class="container">
        <div class="row">
                  <form action="/auth/signup" method="post">
                    <h3>Required</h3>
                    <div class="form-group">
                      <label class="col-sm-3 control-label">Username</label>
                      <div class="col-sm-9">
                        <input type="input" class="form-control" name="username" placeholder="Username" required>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-sm-3 control-label">Password</label>
                      <div class="col-sm-9">
                        <input type="password" class="form-control" name="password"
                        pattern="<%= passRules.number ? '(?=.*\\d)' : '' %><%= passRules.upperlowercase ? '(?=.*[^A-Z])(?=.*[^a-z])' : '' %>.{<%= passRules.minlength %>,<%= passRules.maxlength %>}"
                        onchange="form.passwordConf.pattern = this.value;"
                        placeholder="Password" required>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-sm-3 control-label">Repeat Password</label>
                      <div class="col-sm-9">
                        <input type="password" class="form-control" id="input-password" name="passwordConf" placeholder="Repeat Password" required>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-sm-3 control-label">Role</label>
                      <div Class= "col-sm-9">
                        <select name="role_id" class="col-sm-9 form-control">
                          <% roles.forEach(function(role){ %>
                            <% if(role.id == "58dee1697a555253f4ad6d02" || role.id == "58dee1697a555253f4ad6d03" || checkRole("administrateur")){ %>
                              <option value="<%= role.id %>"><%= role.name %></option>
                            <% } %>
                          <% }); %>
                        </select>
                      </div>
                    </div>
                    <br />
                    <br />
                    <br />
                    <br />
                    <div class="form-group">
                      <h3>Personal Info</h3>
                      <label class="col-sm-3 control-label">Name</label>
                      <div class="col-sm-9">
                        <input type="input" class="form-control" name="name" placeholder="Name" required>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="input-email" class="col-sm-3 control-label">Email</label>
                      <div class="col-sm-9">
                        <input type="email" class="form-control" id="input-email" name="email" placeholder="Email" required>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="input-phone" class="col-sm-3 control-label">Phone Number</label>
                      <div class="col-sm-9">
                        <input type="input" class="form-control" id="input-phone" name="phone" placeholder="Phone" required>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="input-location" class="col-sm-3 control-label">Location</label>
                      <div class="col-sm-9">
                        <input type="input" class="form-control" id="input-location" name="street" placeholder="Street" required>
                        <input type="input" class="form-control" id="input-location" name="city" placeholder="City" required>
                        <input type="input" class="form-control" id="input-location" name="state" placeholder="State" required>
                        <input type="input" class="form-control" id="input-location" name="postal_code" placeholder="Postal Code" required>
                      </div>
                    </div>
                    <div class="form-group">
                      <input class="btn btn-primary btn-raised pull-right" type="submit" value="Sign Up">
                    </div>
                  </form>

        </div>
      </div>
    <%- include("partials/footer") %>
  </body>
</html>
